<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="UrlTest.php">./tests/Unit</directory>
            <directory suffix="CollectionTest.php">./tests/Unit</directory>
            <directory suffix="AreaEntityTest.php">./tests/Unit</directory>
            <directory suffix="ClientTest.php">./tests/Unit</directory>
            <directory suffix="RequestTest.php">./tests/Unit</directory>
            <directory suffix="ResponseTest.php">./tests/Unit</directory>
            <directory suffix="SpecializationEntityTest.php">./tests/Unit</directory>
            <directory suffix="ExceptionHandlerTest.php">./tests/Unit</directory>
            <directory suffix="PaginateTest.php">./tests/Feature</directory>
            <directory suffix="VacancyTest.php">./tests/Feature</directory>
            <directory suffix="CompanyTest.php">./tests/Feature</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>
